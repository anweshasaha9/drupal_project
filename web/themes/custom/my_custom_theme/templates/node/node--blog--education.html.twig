<article{{ attributes }} class="blog blog--education">

  {{ title_prefix }}
  {% if label and not page %}
    <h2{{ title_attributes }} class="blog__title">
      <a href="{{ url }}" rel="bookmark" class="blog__link">{{ label }}</a>
    </h2>
  {% endif %}
  {{ title_suffix }}

  {% if display_submitted %}
    <footer class="blog__footer">
      {{ author_picture }}
      <div{{ author_attributes }} class="blog__author-info">
        {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
        {{ metadata }}
      </div>
    </footer>
  {% endif %}

  <div{{ content_attributes }} class="blog__content">
    {{ content }}
  </div>

</article>
